<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutProdottoGenerale"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:id="@+id/ly_item"
        android:layout_marginBottom="10dp">
        <com.yagna.petra.app.views.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merchant"
            android:textColor="@color/dark_grey"
            android:id="@+id/list_merchant"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text"
            android:gravity="left" />

        <com.yagna.petra.app.views.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Industry"
            android:textColor="@color/dark_grey"
            android:id="@+id/list_industry"
            android:textSize="@dimen/normal_text"

            android:layout_weight="1"
            android:gravity="left"
            />

        <com.yagna.petra.app.views.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Credit"
            android:textColor="@color/dark_grey"
            android:visibility="visible"
            android:id="@+id/list_store_credit"
            android:layout_weight="1.1"
            android:textSize="@dimen/normal_text"
            android:gravity="left" />
    </LinearLayout>


</LinearLayout>