<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/linearLayoutProdottoGenerale"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:id="@+id/ly_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <com.yagna.petra.app.views.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/dark_grey"
            android:id="@+id/list_date"
            android:layout_weight="1.1"
            android:textSize="@dimen/normal_text"
            android:gravity="left" />
    <com.yagna.petra.app.views.TypefacedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/list_cust"
        android:singleLine="true"
        android:ellipsize="middle"
        android:maxEms="5"
        android:textColor="@color/dark_grey"
        android:layout_weight="1"
        android:textSize="@dimen/normal_text"
        android:gravity="left"
        />
        <com.yagna.petra.app.views.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/list_action"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/dark_grey"
            android:layout_weight="1.2"
            android:gravity="left"
           />
        <com.yagna.petra.app.views.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/list_price"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/dark_grey"
            android:layout_weight="1.2"
            android:gravity="left" />
        <com.yagna.petra.app.views.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="visible"
            android:id="@+id/list_type"
            android:textColor="@color/dark_grey"
            android:layout_weight="1.2"
            android:textSize="@dimen/normal_text"
            android:gravity="left" />
    </LinearLayout>

</LinearLayout>