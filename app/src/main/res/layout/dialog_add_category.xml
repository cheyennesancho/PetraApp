<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/size_20">
    <LinearLayout
        android:layout_width="@dimen/size_600"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorAccent">
            <com.yagna.petra.app.views.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:text="Add/Edit Category"
                android:id="@+id/texttitle" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/white">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                android:id="@+id/ly_subcateg"
                android:visibility="gone"
                android:background="@color/colorAccent">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="@dimen/size_5"
                    android:hint="SubCategory Name" >

                    <com.yagna.petra.app.views.TypefacedEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/size_10"
                        android:imeOptions="actionNext"
                        android:gravity="left|center_vertical"
                        android:focusable="true"
                        android:paddingRight="30dp"
                        style="@style/editext"
                        android:id="@+id/s_name"
                        android:inputType="textEmailAddress"
                        android:drawablePadding="5dp"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    app:cardElevation="10dp"
                    android:id="@+id/ly_categ"
                    android:background="@color/colorAccent"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txtxtitlep_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_margin="@dimen/size_5"
                        android:hint="Category Name" >

                        <com.yagna.petra.app.views.TypefacedEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/size_10"
                            android:imeOptions="actionNext"
                            android:gravity="left|center_vertical"
                            android:focusable="true"
                            android:paddingRight="30dp"
                            style="@style/editext"
                            android:id="@+id/p_name"
                            android:inputType="textEmailAddress"
                            android:drawablePadding="5dp"
                           />
                </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                android:id="@+id/ly_code"
                android:background="@color/colorAccent"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtxtitlep_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="@dimen/size_5"
                    android:hint="Category Code" >

                    <com.yagna.petra.app.views.TypefacedEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/size_10"
                        android:imeOptions="actionNext"
                        android:gravity="left|center_vertical"
                        android:focusable="true"
                        android:paddingRight="30dp"
                        style="@style/editext"
                        android:id="@+id/p_code"
                        android:inputType="textEmailAddress"
                        android:drawablePadding="5dp"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="10dp"
                    android:layout_above="@id/ly_categ"
                    android:background="@color/colorAccent"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txtxtitlep_discrption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_margin="@dimen/size_5"
                        android:hint="Description" >

                        <com.yagna.petra.app.views.TypefacedEditText
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/size_10"
                            android:imeOptions="actionDone"
                            android:gravity="left"
                            android:id="@+id/p_discrption"
                            android:paddingRight="30dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:maxLines="100"
                            android:maxLength="500"
                            android:inputType="textMultiLine"
                            style="@style/editext"
                            android:drawablePadding="5dp"
                      />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:id="@+id/done"
                android:background="@mipmap/done_btn_cicle"

                />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:id="@+id/back"
                android:background="@mipmap/back_btn_circle"
                />
        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
